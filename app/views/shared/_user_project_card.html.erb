<div class="user-project-card d-flex pe-0">

  <%= cl_image_tag project.photos.first.key, crop: :fill, class: "user-project-image b-radius" %>
  <div class="user-project-info d-flex flex-column justify-content-between p-3 w-100">
    <div>
      <div class="d-flex justify-content-between">
        <h4 class="mb-3"><%= project.name %></h4>
        <h4 class="d-flex align-items-center ms-4 mid-gray"><i class="fa-solid fa-hammer"></i></h4>
      </div>
      <p class="mb-3 mid-gray"><i class="fa-solid fa-location-dot mid-gray"></i> <%= project.city %> - <%= project.organization.country %></p>
      <div class="d-flex mid-gray">
        <p class="mb-4 me-4"><i class="fa-solid fa-calendar-days"></i> <%= project.start_date.strftime("%d %b %Y") %></p>
        <p><i class="fa-solid ms-2 fa-calendar-check"></i> <%= project.end_date.strftime("%d %b %Y") %></p>
      </div>
      <p class="mb-2 mid-gray"><%= project.description[0..120] %>...</p>
    </div>
    <div class="d-flex mt-3">
      <%= render 'shared/status', booking: booking %>
    </div>
  </div>
</div>
