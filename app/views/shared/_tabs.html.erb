<div class="tabs d-flex justify-content-center align-items-end pb-0">
  <% if @user %>
    <%= link_to user_projects_path, class: "tab-link mt-4 pb-0 mb-0 active", data: { action: "click->user-tabs#renderProjects", user_tabs_target: "projects" } do %>
      <p class="pb-3 mb-0">Projects</p>
    <% end %>
    <%= link_to user_messages_path, class: "tab-link mt-4 pb-0 mb-0", data: { action: "click->user-tabs#renderMessages", user_tabs_target: "messages" } do %>
      <p class="pb-3 mb-0">Messages</p>
    <% end %>
    <%= link_to user_skills_path, class: "tab-link mt-4 pb-0 mb-0", data: { action: "click->user-tabs#renderSkills", user_tabs_target: "skills" } do %>
      <p class="pb-3 mb-0">Skills</p>
    <% end %>
    <%= link_to user_badges_path, class: "tab-link mt-4 pb-0 mb-0", data: { action: "click->user-tabs#renderBadges", user_tabs_target: "badges" } do %>
      <p class="pb-3 mb-0">Badges</p>
    <% end %>
  <% end %>

  <% if @organization %>
    <%= link_to organization_projects_path, class: "tab-link mt-4 pb-0 mb-0 active", data: { action: "click->organization-tabs#renderProjects", organization_tabs_target: "projects" } do %>
      <p class="pb-3 mb-0">Projects</p>
    <% end %>
    <%= link_to organization_messages_path, class: "tab-link mt-4 pb-0 mb-0", data: { action: "click->organization-tabs#renderMessages", organization_tabs_target: "messages" } do %>
      <p class="pb-3 mb-0">Messages</p>
    <% end %>
    <% if @organization == current_organization %>
      <%= link_to organization_requests_path, class: "tab-link mt-4 pb-0 mb-0", data: { action: "click->organization-tabs#renderRequests", organization_tabs_target: "requests" } do %>
        <p class="pb-3 mb-0">Requests</p>
      <% end %>
    <% else %>
      <%= link_to organization_requests_path, class: "tab-link mt-4 pb-0 mb-0 d-none", data: { action: "click->organization-tabs#renderRequests", organization_tabs_target: "requests" } do %>
        <p class="pb-3 mb-0">Requests</p>
      <% end %>
    <% end %>
  <% end %>
</div>
