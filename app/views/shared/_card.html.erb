<h1>card for project</h1>


<div class="card-project">
  <img class="project-image"src="https://images.unsplash.com/photo-1617450365226-9bf28c04e130?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" />
  <div class="card-project-infos">
    <h2><%= project.name %></h2>
    <h3><i class="fa-solid fa-child-reaching"></i> <%= project.category %></h3>
    <p><i class="fa-solid fa-location-dot"></i> <%= project.address %></p>
    <p><i class="fa-solid fa-calendar-days"></i>  <%= project.start_date %>      <i class="fa-solid fa-calendar-check"></i>  <%= project.end_date %></p>
    <p><%= project.description %></p>
  </div>

  <div class="container volunteers">
    <h3>Volunteers</h3>
    <div class="row">
      <% 3.times do %>
        <img class="avatar" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" />
      <% end %>
    </div>
    <div class="row mt-3">
      <% 3.times do %>
        <img class="avatar" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" />
      <% end %>
    </div>
  </div>
</div>
