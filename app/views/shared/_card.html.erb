<div class="card-project">
  <img class="project-image"src="https://images.unsplash.com/photo-1617450365226-9bf28c04e130?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" />
  <div class="card-project-infos ">
    <h2><%= project.name %></h2>
    <h3><i class="fa-solid fa-leaf"></i> <%= project.category %></h3>
    <p><i class="fa-solid fa-location-dot"></i> <%= project.address %></p>
    <p><i class="fa-solid fa-calendar-days"></i> <%= project.start_date %><i class="fa-solid ms-2 fa-calendar-check"></i> <%= project.end_date %></p>
    <p><%= project.description %></p>
  </div>

  <div class="d-flex flex-column justify-content-end avatars">
    <h4>Volunteers</h4>
    <div class="d-flex justify-content-around">
      <% 3.times do %>
        <img class="avatar" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" />
      <% end %>
    </div>
    <div class="d-flex mt-3 justify-content-around">
      <% 3.times do %>
        <img class="avatar" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" />
      <% end %>
    </div>
    <h4 class="mt-3">Skills</h4>
    <div class="d-flex justify-content-around skills">
      <i class="fa-solid fa-hammer"></i>
      <i class="fa-sharp fa-solid fa-shield-dog"></i>
      <i class="fa-solid fa-paint-roller"></i>
    </div>
  </div>
</div>
