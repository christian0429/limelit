<div class="card-user-project d-flex pe-0">
  <%= image_tag "https://source.unsplash.com/random/300x300/?village", class: "user-project-image b-radius" %>
  <div class="user-project-info d-flex flex-column justify-content-between p-3 w-100">
    <div>
      <div class="d-flex justify-content-between">
        <h4 class="mb-3"><%= project.name %></h4>
        <h4 class="d-flex align-items-center ms-4"><i class="fa-solid fa-hammer"></i></h4>
      </div>
      <p class="mb-3"><i class="fa-solid fa-location-dot"></i> <%= project.city %> - <%= project.organization.country %></p>
      <div class="d-flex">
        <p class="mb-4 me-4"><i class="fa-solid fa-calendar-days"></i> <%= project.start_date.strftime("%d %b %Y") %></p>
        <p><i class="fa-solid ms-2 fa-calendar-check"></i> <%= project.end_date.strftime("%d %b %Y") %></p>
      </div>
      <p class="mb-4"><%= project.description %></p>
    </div>
    <div class="d-flex">
      <span class="mt-3 mb-0 py-2 px-4 b-solid b-radius">Pending</span>
    </div>
  </div>
</div>
