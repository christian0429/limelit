          <li class="nav-item">
            <%= link_to "About us", '#', class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Donate", '#', class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Become a partner", new_organization_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link btn-white" %>
          </li>
