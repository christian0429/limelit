<nav class="b-bottom w-100 mt-5">
  <div class="d-flex justify-content-center align-items-center ">
    <p class="mt-4 me-5">Projects</p>
    <p class="mt-4 me-5">Channels</p>
    <p class="mt-4 me-5">Skills</p>
    <p class="mt-4 me-5">Badges</p>
  </div>
</nav>
<main class="mb-5 p-5 pt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-3">
      <aside>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/felipecrubio", class: "avatar-xl" %>
        <h3><%= current_user.first_name%> <%= current_user.last_name %></h3>
        <h1><%= current_user.projects.first.name %></h1>
      </aside>
    </div>

    <div class="col-12 col-md-8">
      <section>
        <div class="b-solid b-radius p-5 pb-0">
          <% current_user.projects.each do |project| %>
            <div class="mb-5">
            <%= render 'shared/card', project: project %>
            </div>
          <% end %>
        </div>
      </section>
    </div>

  </div>
</main>
