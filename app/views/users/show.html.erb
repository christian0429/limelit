<nav class="b-bottom w-100 mt-5 pb-0">
  <div class="d-flex justify-content-center align-items-end pb-0">
    <%= button_tag class: "tab-link mt-4 me-5 pb-0 mb-0" do %>
      <p class="pb-3 mb-0">Projects</p>
    <% end %>
    <%= button_tag class: "tab-link mt-4 me-5 pb-0 mb-0" do %>
      <p class="pb-3 mb-0">Channels</p>
    <% end %>
    <%= button_tag class: "tab-link mt-4 me-5 pb-0 mb-0" do %>
      <p class="pb-3 mb-0">Skills</p>
    <% end %>
    <%= button_tag class: "tab-link mt-4 me-5 pb-0 mb-0" do %>
      <p class="pb-3 mb-0">Badges</p>
    <% end %>
  </div>
</nav>
<main class="mb-5 p-5 pt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-3">
      <aside>
        <div class="user-panel-aside d-flex">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/apcbrasil", class: "avatar-xl mb-3" %>
          <div class="user-bio">
            <h3><%= current_user.first_name%> <%= current_user.last_name %></h3>
            <p><i class="fa-solid fa-location-dot"></i> <%= current_user.country %></p>
          </div>
        </div>
      </aside>
    </div>

    <div class="col-12 col-lg-8">
      <section>
        <div class="cards-user b-solid b-radius pb-0">
          <% current_user.projects.each do |project| %>
            <div class="mb-5">
              <%= link_to project_path(project), class: "hover-purple text-decoration-none" do %>
                <%= render 'shared/card_user_project', project: project %>
              <% end %>
            </div>
          <% end %>
        </div>
      </section>
    </div>
  </div>
</main>
