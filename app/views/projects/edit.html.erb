<% categories = %w[Agriculture Animal\ Rescue Construction Education Environmental Relief\ Effort Sanitation Water\ Access] %>

<main class="container my-5 p-5">
  <div class="form-card background-purple b-radius p-5">
    <h1 class="mb-4">Edit your Project</h1>
    <%= simple_form_for @project, data: { controller: "flatpickr" } do |f| %>
      <%= f.input :name, label: "Project name", input_html: { class: "border-purple b-radius px-4" } %>
      <%= f.input :description, input_html: { class: "border-purple b-radius px-4" } %>
      <%= f.input :category, collection: categories, input_html: { class: "border-purple b-radius px-4" } %>
      <%= f.input :address, input_html: { class: "border-purple b-radius px-4" } %>
      <%= f.input :city, input_html: { class: "border-purple b-radius px-4" } %>
      <%= f.input :available_spots, input_html: { class: "border-purple b-radius px-4", min: '1' } %>
      <%= f.input :start_date, input_html: { class: "border-purple b-radius px-4", data: { flatpickr_target: "firstRangeInput" }, value: @project.start_date.strftime("%d %b, %Y") }, as: :string %>
      <%= f.input :end_date, input_html: { class: "border-purple b-radius px-4", data: { flatpickr_target: "secondRangeInput" }, value: @project.end_date.strftime("%d %b, %Y")  }, as: :string %>
      <%= f.submit class: "btn btn-lg btn-outline-light b-radius w-100 mt-3" %>
    <% end %>
  </div>
</main>
