<main>
  <div class="container mx-auto">
    <div class="row mt-3 justify-content-center project-cards ">
      <% if @projects.present? %>
        <% @projects.each do |project| %>
          <% if project.end_date > Date.current%>
            <div class="col-11 col-md-10 pt-5">
              <%= render 'shared/card', project: project %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</main>
