<div class="container mx-auto">
  <div class="row justify-content-center project-cards gap-5">
    <% @organization.projects.each do |project| %>
      <% if project.end_date > Date.current%>
        <div class="col-11 col-md-10">
          <%= link_to project_path(project), class: "hover-purple text-decoration-none" do %>
            <div class="d-flex">
              <%= render 'shared/card', project: project %>
              <% if policy(project).edit? %>
                <%=  link_to edit_project_path(project) do %>
                  <div class="container">
                    <i class="fa-regular fa-pen-to-square"></i>
                  </div>
                <% end %>
              <% end %>
              <% if policy(project).destroy? %>
                <%=  link_to project_path(project), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this project?"} do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
              <% end %>
              <!-- app/views/restaurants/show.html.erb -->
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
